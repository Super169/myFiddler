<UserControl x:Class="myKing.WarHero"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myKing"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="60">
    <Grid Background="Black">
        <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,1,1,1" Width="58" Height="48" Background="#FF7F7F7F" Click="button_Click" BorderBrush="#FF0834F9"/>
        <Label x:Name="lblLevel" Content="0" BorderThickness="1" Padding="0" Margin="0,1,1,0" Height="13" HorizontalAlignment="Right" Width="12" IsManipulationEnabled="True" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Bottom" FontSize="8" BorderBrush="Green"/>
        <Label x:Name="lblPower" Content="0" Padding="0" Height="13" IsManipulationEnabled="True" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" FontSize="8" BorderBrush="Green" Margin="0,0,2,2"/>
    </Grid>
</UserControl>
