<UserControl x:Class="SazCompare.UcSessionData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SazCompare"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <ListView x:Name="lvSession" Height="180" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="listView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Action" Width="300" DisplayMemberBinding="{Binding action}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="txtRequest" Height="82" Margin="10,195,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="txtResponse" Margin="10,282,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

    </Grid>
</UserControl>
