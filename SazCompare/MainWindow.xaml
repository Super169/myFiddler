<Window x:Class="SazCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SazCompare"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1024" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="500*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnLoad_A" Content="Load" Margin="0,0,5,10" Click="btnLoad_A_Click" HorizontalAlignment="Right" Width="75" Height="27" VerticalAlignment="Bottom" FontSize="14"/>
        <local:UcSessionData Grid.Column="0" x:Name="uc_A" Margin="0,0,0,42"/>
        <local:UcSessionData Grid.Column="2" x:Name="uc_B" Margin="0,0,0,42"/>
        <Button x:Name="btnLoad_B" Content="Load" Grid.Column="2" Margin="0,0,5,10" Click="btnLoad_B_Click" HorizontalAlignment="Right" Width="75" Height="27" VerticalAlignment="Bottom" FontSize="14"/>
        <Button x:Name="btnNext" Content="Next" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,85,10" VerticalAlignment="Bottom" Width="75" Height="27" Click="btnNext_Click" />

    </Grid>
</Window>
